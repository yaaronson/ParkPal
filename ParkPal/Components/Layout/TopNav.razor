@inherits LayoutComponentBase
@using ParkPal.Components.Layout
@layout Footer

<head>
    <meta charset="UTF-8">
    <title>Navigation Menu</title>
    <style>
     
        body {
            margin: 0; 
        }

        .navbar {
            background-color: #5bc0de; 
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px; 
            width: 100%;
            font-family: 'Arial', sans-serif; 
            border-radius: 8px; 
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); 
            margin-top: 0; 
        }

            .navbar .logo {
                font-weight: bold;
                font-size: 28px; 
                color: #fff; 
                flex-grow: 1;
            }

            .navbar .nav-links ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
                text-align: center;
            }

                .navbar .nav-links ul li {
                    display: inline-block;
                    margin-right: 25px; 
                }

                    .navbar .nav-links ul li a {
                        color: #fff; 
                        text-decoration: none;
                        font-weight: bold;
                    }

        .cta-button button {
            background-color: #007bff; 
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px; 
            cursor: pointer;
            font-weight: bold;
        }
    </style>
</head> 
<body>
    <div class="navbar">
        <div class="logo">
            <img src="/parkpallogo.png" alt="Logo">
        </div>
        <div class="nav-links">
            
            <ul>
                <li><a href="#" id="home">Home</a></li>
                <li><a href="#" id="rent">Rent A Spot</a></li>
                <li><a href="#" id="support">Help Center</a></li>
            </ul>
        </div>
        <div class="cta-button">
          
            <button id="createListing">ParkPal Your Space</button>
        </div>
    </div>


    <div class="main-content">
        @Body <!-- This is where the content of each page will be  -->
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navigateTo = (url) => {
                window.location.href = url;
            };

            document.getElementById('rent').addEventListener('click', function (event) {
                event.preventDefault();
                navigateTo('https://localhost:7279/Explore');
            });

            document.getElementById('home').addEventListener('click', function (event) {
                event.preventDefault();
                navigateTo('https://localhost:7279/Login');
            });

            document.getElementById('support').addEventListener('click', function (event) {
                event.preventDefault();
                navigateTo('https://localhost:7279/Support');
            });

            document.getElementById('createListing').addEventListener('click', function (event) {
                event.preventDefault();
                navigateTo('https://localhost:7279/CreateListing');
            });
        });

    </script>
</body>

<footer>
    
</footer>


