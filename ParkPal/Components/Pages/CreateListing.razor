@page "/CreateListing"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Listing</title>
    <style>
        /* CSS styles for Create Listing page */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }

        .listing-form {
            width: 60%;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
        }

        label {
            display: block;
            margin-top: 15px;
        }

        input[type="text"],
        input[type="number"],
        textarea,
        input[type="date"],
        input[type="time"] {
            width: calc(100% - 30px);
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #3D42F3;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            input[type="submit"]:hover {
                background-color: #5ab9ea;
            }

        input[type="file"] {
            margin-top: 5px;
        }

        #map {
            height: 300px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
    <script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=YOUR_BING_MAPS_API_KEY'></script>
</head>
<body>
    <form class="listing-form" enctype="multipart/form-data">
        <h2>ParkPal Your Space!</h2>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="price">Price Per Day:</label>
        <input type="number" id="price" name="price" min="0" required>

        <label for="start-date">Start Date:</label>
        <input type="date" id="start-date" name="start-date" required>

        <label for="start-time">Start Time:</label>
        <input type="time" id="start-time" name="start-time" required>

        <label for="end-date">End Date:</label>
        <input type="date" id="end-date" name="end-date" required>

        <label for="end-time">End Time:</label>
        <input type="time" id="end-time" name="end-time" required>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>

        <!-- Embedded Map -->
        <div id="map" style="position:relative;width:600px;height:400px;"></div>

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required></textarea>

        <label for="additional-notes">Additional Notes:</label>
        <textarea id="additional-notes" name="additional-notes" rows="4"></textarea>

        <label for="images">Upload Images:</label>
        <input type="file" id="images" name="images" accept="image/*" multiple>

        <label for="videos">Upload Videos:</label>
        <input type="file" id="videos" name="videos" accept="video/*" multiple>

        <input type="submit" value="Create Listing">
    </form>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            function loadMapScenario() {
                var mapElement = document.getElementById('map');
                var addressInput = document.getElementById('address');

                if (!mapElement || !addressInput) {
                    console.log("Map or address input element not found.");
                    return;
                }

                var map = new Microsoft.Maps.Map(mapElement, {
                    credentials: 'AtqNLHA6sIAE94ZXG6Nzm1tNb_igZu-VlDagoYFnsPc0LL1-v96Pju5pS8VyPTF8'
                });

                if (!map) {
                    console.log("Map couldn't be loaded.");
                    return;
                }

                var searchManager = new Microsoft.Maps.Search.SearchManager(map);
                var autoCompleteOptions = {
                    maxResults: 5
                };

                var autoComplete = new Microsoft.Maps.Autocomplete(searchManager, addressInput, autoCompleteOptions);

                autoComplete.addEventListener('change', function (e) {
                    if (e.result) {
                        map.setView({ bounds: e.result.bestView });
                        var pin = new Microsoft.Maps.Pushpin(e.result.location);
                        map.entities.clear();
                        map.entities.push(pin);
                    }
                });
            }

            loadMapScenario();
        });
    </script>
</body>
</html>






