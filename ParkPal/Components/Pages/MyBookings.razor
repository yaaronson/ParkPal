@page "/Bookings"
@using ParkPal.Components.Layout
@layout TopNav

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>My Bookings</title>

        <link rel="stylesheet" href="/bootstrap/CSS/darkmode.css" >
        <link rel="stylesheet" href="/bootstrap/CSS/Parkpaldesign.css" >
    
</head>
<body>
    <main class="bookings-page-content">
        <section class="booking-management">
            <div class="bookings-list">
                <div class="booking-item">
                    <h3 class="booking-title">Booking 1</h3>
                    <p class="booking-details">Location: City 1</p>
                    <p class="booking-details">Car Type: SUV</p>
                    <p class="booking-details">Dates: Feb 23 - Feb 28</p>
                    <p class="booking-details">Status: Confirmed</p>
                    <p class="booking-details">Number of Passengers: 4</p>
                    <p class="booking-details">Total Price: $500</p>
                    <div class="booking-actions">
                        <button class="modify-btn">Modify</button>
                        <button class="cancel-btn">Cancel</button>
                    </div>
                </div>
                <div class="booking-item">
                    <h3 class="booking-title">Booking 2</h3>
                    <p class="booking-details">Location: City 2</p>
                    <p class="booking-details">Car Type: Sedan</p>
                    <p class="booking-details">Dates: Mar 10 - Mar 15</p>
                    <p class="booking-details">Status: Confirmed</p>
                    <p class="booking-details">Number of Passengers: 2</p>
                    <p class="booking-details">Total Price: $300</p>
                    <div class="booking-actions">
                        <button class="modify-btn">Modify</button>
                        <button class="cancel-btn">Cancel</button>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script src="/bootstrap/JS/darkmode.js"></script>
</body>
</html>
